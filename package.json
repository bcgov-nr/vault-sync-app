{
  "name": "vstool",
  "version": "1.0.0",
  "author": "Matthew Bystedt <matthew.bystedt@gov.bc.ca>",
  "description": "Vault sync tool for IIT",
  "keywords": [
    "oclif"
  ],
  "exports": "./lib/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "vstool": "./bin/run"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "scripts": {
    "build": "shx rm -rf dist && tsc -b",
    "lint": "eslint \"**/*.{js,ts}\" --fix --config .eslintrc.json",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "postpack": "shx rm -f oclif.manifest.json",
    "test": "jest --config=jest.config.cjs",
    "posttest": "eslint \"**/*.{js,ts}\" --fix --config .eslintrc.json",
    "e2e": "jest --config=jest.e2e.config.cjs",
    "start": "ts-node src/index.ts",
    "version": "oclif-dev readme && git add README.md"
  },
  "oclif": {
    "bin": "vstool",
    "commands": "./dist/commands",
    "dirname": "vstool",
    "plugins": [
      "@oclif/plugin-help",
      "@oclif/plugin-plugins"
    ]
  },
  "dependencies": {
    "@oclif/core": "^4.0.14",
    "@oclif/plugin-help": "^6.2.7",
    "@oclif/plugin-plugins": "^5.3.9",
    "axios": "^1.7.2",
    "ejs": "^3.1.10",
    "inversify": "^6.0.2",
    "merge-deep": "^3.0.3",
    "node-vault": "^0.10.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "winston": "^3.13.1"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/jest": "^29.5.12",
    "@types/merge-deep": "^3.0.3",
    "@types/node": "^20.14.12",
    "@types/request": "^2.48.12",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "oclif": "^4.14.9",
    "rimraf": "^3.0.2",
    "shx": "^0.3.4",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
