{
    "appRole": {
        "role_name": "app-<%= project %>-<%= application %>",
        "token_policies": [
            "app-<%= project %>",
            "app-<%= project %>-<%= application %>"
        ]
    },
    "groups": [
        {
            "name": "app-deliveries",
            "policies": [
                "app-<%= project %>-<%= application %>-appdev"
            ]
        },
        {
            "name": "app-<%= project %>-<%= application %>",
            "metadata": {
                "project": "<%= project %>",
                "application": "<%= application %>"
            },
            "policies": [
                "app-<%= project %>-<%= application %>",
                "app-<%= project %>"
            ]
        },
        {
            "name": "app-dba",
            "type": "internal",
            "metadata": {
                "project": "<%= project %>",
                "application": "<%= application %>"
            },
            "policies": [
                "app-<%= project %>-<%= application %>-dba"
            ]
        }
    ],
    "policies": [
        {
            "name": "app-<%= project %>-<%= application %>-appdev",
            "template": "appdev.hcl.tpl"
        },
        {
            "name": "app-<%= project %>-<%= application %>",
            "template": "application.hcl.tpl"
        },
        {
            "name": "app-<%= project %>-<%= application %>-dba",
            "template": "dba.hcl.tpl"
        }
    ]
}
